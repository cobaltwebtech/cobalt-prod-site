---
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@/components/ui/blocks/MainSection.astro";
import LeftSection from "@/components/ui/blocks/LeftSection.astro";
import RightSection from "@/components/ui/blocks/RightSection.astro";
import FeaturesStats from "@/components/sections/features/FeaturesStats.astro";

// Import necessary images
import serviceBuild1 from "@/images/services/service-let-us-build-1.avif";
import serviceBuild2 from "@/images/services/service-let-us-build-2.avif";
import serviceHacker from "@/images/services/service-hacker-graphic.avif";
import serviceNetwork from "@/images/services/service-network-server.avif";
import serviceGlobal from "@/images/services/service-global-network-1.avif";
import serviceDigitalMarketing from "@/images/services/service-digital-marketing-desktop.avif";
import serviceEcommerce1 from "@/images/services/service-ecommerce-tall-1.avif";
import serviceEcommerce2 from "@/images/services/service-ecommerce-tall-2.avif";

import { siteMeta } from "@/lib/siteData";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "A New Website Experience",
    subTitle:
      "Do you need a brand new website to showcase your products or services? Is your current website slow, unresponsive, and looking dated? Let Cobalt Web Technologies build your next web project for you. We can build your website to be exactly what you want with any custom design. Your website is there to showcase your brand and products and should reflect your exact design elements and that is what we can deliver to you.",
    single: false,
    imgOne: serviceBuild1,
    imgOneAlt: "Viewing website on mobile device and computer in background",
    imgTwo: serviceBuild2,
    imgTwoAlt: "Working on laptop",
    btnExists: true,
    btnTitle: "Learn More",
    btnURL: "/services/a-new-website-experience/",
  },
  {
    isRightSection: false,
    title: "Protect Your Site and App from Threats",
    subTitle:
      "The web today is full of malicious users and many of them are not even human. Are your web applications and sites protected and secure from outside attacks and abuse? Your website and apps require always-on 24/7 protection and we provide that in all of our hosted solutions.",
    img: serviceHacker,
    imgAlt: "Hacker trying to hack into website",
    btnExists: true,
    btnTitle: "Learn More",
    btnURL: "/services/protect-your-site-from-threats/",
  },
  {
    isRightSection: true,
    title: "Live Life on the Edge",
    subTitle:
      "Speed is paramount for anything delivered over the web today. People don't have time to wait on a slow website to finish loading. Is your website stuck in 1996 on a 56K modem? Whether you have a simple blog on a static site, an ecommerce store with over 100,000 items, or media-rich site with large images and videos you need performance and speed built into your web platform.",
    single: false,
    imgOne: serviceNetwork,
    imgOneAlt: "Datacenter server rack cabinets",
    imgTwo: serviceGlobal,
    imgTwoAlt: "Global network graphic",
    btnExists: true,
    btnTitle: "Learn More",
    btnURL: "/services/live-life-on-the-edge/",
  },
  {
    isRightSection: false,
    title: "Digital Marketing & SEO",
    subTitle:
      "What kind of digital marketing strategy are you implementing? If you have none, you may be losing out on valuable business and customers. No matter what your website is about, you can leverage digital marketing to gain more business. Whether you are selling goods or services we can create an ad campaign to fit any budget. At Cobalt, we do and can help with optimizing your website for best results in search rankings.",
    img: serviceDigitalMarketing,
    imgAlt: "Digital marketing graphic with mobile phone",
    btnExists: true,
    btnTitle: "Learn More",
    btnURL: "/services/digital-marketing/",
  },
  {
    isRightSection: true,
    title: "Ecommerce Solutions",
    subTitle:
      "How well does it sell online? Whether you are already online or just starting out, Cobalt Web Technologies can help bring your business online and reach a wider customer base. We can build your ecommerce website to showcase your brand and products exactly how you want.",
    single: false,
    imgOne: serviceEcommerce1,
    imgOneAlt: "Ecommerce shopping online graphic",
    imgTwo: serviceEcommerce2,
    imgTwoAlt: "Ecommerce shopping online graphic",
    btnExists: true,
    btnTitle: "Learn More",
    btnURL: "/services/ecommerce-solutions/",
  },
];

const pageTitle: string = `Services | ${siteMeta.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://www.cobaltweb.tech/services/",
    url: "https://www.cobaltweb.tech/services/",
    name: "Services | Cobalt Web Technologies",
    description:
      "Cobalt Web Technologies provides managed services for your web application needs.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://www.cobaltweb.tech/",
      name: "Cobalt Web Technologies",
      description:
        "Cobalt Web Technologies builds high performance websites with secure managed cloud infrastructure along with digital marketing and SEO services.",
    },
    inLanguage: "en-US",
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Our Services"
    subTitle="At Cobalt Web Technologies, we pride ourselves on delivering exceptional customer service that caters to the unique needs of our clients. Our dedicated team of experts is committed to providing you and your business a seamless and frustration-free experience with our managed services for your web applications. "
    btnExists={true}
    btnTitle="Schedule a Consultation"
    btnURL="/contact/"
  />

  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
    title="By the Numbers"
    subTitle="You have a business to run, and we are completely committed to building and supporting the web app you need. Cobalt Web Technologies is here to provide you with outstanding customer service and reliability. We are based in Austin, Texas USA with the expertise to build the project of your dreams and provide the support along with it."
    mainStatTitle="98%"
    mainStatSubTitle="of our clients rate their experience with Cobalt Web Technologies as exceptional"
    stats={[
      {
        stat: "99.99%",
        description: "Uptime on Cloud Infrastructure",
      },
      {
        stat: "150+",
        description: "Currently Deployed Projects",
      },
      {
        stat: "15+",
        description: "Years Experience",
      },
    ]}
  />
</MainLayout>
