---
const { label, id, name } = Astro.props;

interface Props {
  label: string;
  name: string;
  id: string;
}
---

<input
  type="radio"
  name={name}
  id={id}
  value={label}
  class="p-3 border-2 border-slate-400 bg-white dark:bg-slate-700 text-slate-800 dark:text-slate-100 focus:border-slate-400 focus:outline-none focus:ring focus:ring-cyan-400 focus:text-orange-400 checked:bg-orange-400 hover:text-orange-400 dark:focus:text-orange-400 dark:checked:bg-orange-400 dark:hover:text-orange-400 disabled:pointer-events-none disabled:opacity-50"
  required
/>
<label 
  for={id} 
  class="md:mr-16 mr-4 text-sm text-slate-800 dark:text-slate-200"
  >
    {label}
</label>
