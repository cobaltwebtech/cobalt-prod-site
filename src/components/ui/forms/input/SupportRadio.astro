---
const { label, id, inputName } = Astro.props;

interface Props {
  label: string;
  inputName: string;
  id: string;
}
---

<input
  type="radio"
  name={inputName}
  id={id}
  value={label}
  class="border-2 border-slate-400 bg-white p-3 text-slate-800 checked:bg-orange-400 hover:text-orange-400 focus:border-slate-400 focus:text-orange-400 focus:outline-none focus:ring focus:ring-cyan-400 disabled:pointer-events-none disabled:opacity-50 dark:bg-slate-700 dark:text-slate-100 dark:checked:bg-orange-400 dark:hover:text-orange-400 dark:focus:text-orange-400"
  required
/>
<label
  for={id}
  class="mr-4 text-sm text-slate-800 dark:text-slate-200 md:mr-16"
>
  {label}
</label>
