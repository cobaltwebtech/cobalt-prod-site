---
const { label, id, inputName } = Astro.props;

interface Props {
  label: string;
  inputName: string;
  id: string;
}
---

<div>
  <label for={id} class="sr-only">{label}</label>
  <input
    type="text"
    name={inputName}
    id={id}
    class="block w-full rounded-lg border-2 border-slate-400 bg-white px-4 py-3 text-sm text-slate-800 placeholder:text-slate-800 focus:border-slate-400 focus:outline-none focus:ring focus:ring-cyan-400 disabled:pointer-events-none disabled:opacity-50 dark:bg-slate-700 dark:text-slate-100 dark:placeholder:text-slate-100"
    placeholder={label}
    required
  />
</div>
