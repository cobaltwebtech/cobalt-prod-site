---
const { label = Astro.currentLocale === "fr" ? "Me rappeler" : "Remember me", id } = Astro.props;

interface Props {
  label?: string;
  id?: string;
}
---

<!-- Container for the checkbox and its label -->
<div class="flex items-center">
  <!-- Checkbox input -->
  <div class="flex">
    <input
      id={id}
      name="remember-me"
      type="checkbox"
      class="pointer-events-none mt-0.5 shrink-0 rounded border-slate-200 text-slate-600 focus:ring-yellow-400 dark:border-slate-700 dark:bg-slate-800 dark:checked:border-yellow-400 dark:checked:bg-yellow-400 dark:focus:ring-offset-slate-800"
    />
  </div>
  <!-- Label for the checkbox -->
  <div class="ms-3">
    <label for={id} class="text-sm text-slate-800 dark:text-slate-200"
      >{label} <slot />
    </label>
  </div>
</div>
