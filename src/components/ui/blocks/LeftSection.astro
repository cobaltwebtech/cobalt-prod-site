---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import { Button } from "@/components/starwind/button";
// Destructure the props passed to the Astro component
const { title, subTitle, btnExists, btnTitle, btnURL, img, imgAlt } =
  Astro.props;
// Define TypeScript interface for props
interface Props {
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  img: any;
  imgAlt: any;
}
---

<!-- The root section of the component -->
<section class="grid gap-8 py-10 sm:py-16 md:grid-cols-2 lg:py-14 xl:gap-16">
  <!-- The Image component which renders the image -->
  <Image
    class="w-full rounded-xl"
    src={img}
    alt={imgAlt}
    draggable="false"
    format="avif"
    width="672"
  />
  <!-- The container for title, subtitle, and optional CTA button -->
  <div class="mt-4 md:mt-0">
    <!-- The title of the section -->
    <h2
      class="mb-4 text-4xl font-extrabold tracking-tight text-balance text-slate-800 dark:text-slate-200"
    >
      {title}
    </h2>
    <!-- The subtitle of the section -->
    <p
      class="mb-4 max-w-prose font-light text-pretty text-slate-600 sm:text-lg dark:text-slate-200"
    >
      {subTitle}
    </p>
    <!-- Conditionally render the Primary CTA button if btnExists is true -->
    {
      btnExists ? (
        <Button href={btnURL}>
          <Icon name="InfoFill" />
          {btnTitle}
        </Button>
      ) : null
    }
  </div>
</section>
