---
import { Icon } from "astro-icon/components";
// Destructure the properties from Astro.props
const { title, url } = Astro.props;
// Define TypeScript interface for the properties
interface Props {
  title?: string;
  url?: string;
}
// Define CSS classes for styling the button
const baseClasses =
  "group inline-flex items-center justify-center gap-x-2 rounded-lg px-4 py-3 text-sm font-bold text-slate-50 ring-slate-500 transition duration-300 focus-visible:ring outline-none";
const borderClasses = "border-2 border-cobalt-50 dark:border-cobalt-600";
const bgColorClasses =
  "bg-cobalt-700 hover:bg-cobalt-800 dark:focus:outline-none";
const disableClasses = "disabled:pointer-events-none disabled:opacity-50";
const fontSizeClasses = "2xl:text-base";
const ringClasses = "dark:ring-slate-200";
---

<!-- Link styled as a button, with dynamic title, URL, and optional arrow -->
<a
  class={`${baseClasses} ${borderClasses} ${bgColorClasses} ${disableClasses} ${fontSizeClasses} ${ringClasses}`}
  href={url}
>
  <Icon
    name="InfoFill"
    class="size-6 transition duration-300 group-hover:translate-x-1"
  />
  {title}
</a>
