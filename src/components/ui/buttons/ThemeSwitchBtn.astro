---
import { Icon } from "astro-icon/components";
---

<!-- Dark Theme Toggle Button --><!-- This button is shown when the light theme is active, and when clicked, it switches the theme to dark -->
<button
  type="button"
  aria-label="Dark Theme Toggle"
  class="hs-dark-mode ring-zinc-500 dark:ring-zinc-200 group flex size-10 items-center justify-center rounded-full font-medium text-slate-100 outline-none transition duration-300 hover:bg-orange-600 hs-dark-mode-active:hidden dark:hover:text-orange-300 dark:focus:outline-none"
  data-hs-theme-click-value="dark"
>
  <!-- The SVG displayed shows a moon icon to activate dark mode -->
  <Icon name="Moon" class="size-8 flex-shrink-0" />
</button>
<!-- Light Theme Toggle Button -->
<!-- This button is hidden by default and only appears when the dark theme is active, when clicked, it switches to the light theme -->
<button
  type="button"
  aria-label="Light Theme Toggle"
  class="hs-dark-mode ring-zinc-500 dark:ring-zinc-200 group hidden size-10 items-center justify-center rounded-full font-medium text-slate-100 outline-none transition duration-300 hs-dark-mode-active:flex dark:hover:bg-cyan-500 dark:focus:outline-none"
  data-hs-theme-click-value="light"
>
  <!-- The SVG displayed shows a sun icon to activate light mode -->
  <Icon name="Sun" class="size-8 flex-shrink-0" />
</button>
