---
// Import the necessary dependencies
import FooterSocialLink from "../ui/links/FooterSocialLink.astro";
import SecondaryCTA from "@/components/ui/buttons/SecondaryCTA.astro";
import enStrings from "@/utils/navigation.ts";
import Icon from "../ui/icons/Icon.astro";
import BrandLogo from "@/components/BrandLogo.astro";
import { SITE } from "@/data_files/constants";

// Select the correct translation based on the page's lang prop:
const strings = Astro.currentLocale === "fr" ? frStrings : enStrings;

// Define the variables that will be used in this component
const sectionThreeTitle: string = "Stay up to date";
---

<footer class="w-full bg-cobalt-50 dark:bg-cobalt-900">
  <div
    class="mx-auto w-full max-w-[85rem] px-4 py-10 sm:px-6 lg:px-16 lg:pt-20 2xl:max-w-screen-2xl"
  >
    <div class="grid grid-cols-2 gap-6 md:grid-cols-4 lg:grid-cols-5">
      <div class="col-span-full lg:col-span-1">
        <!-- Brand Logo -->
        <BrandLogo class="h-auto w-32" />
      </div>
      <!-- An array of links for Offerings and Company sections -->
      {
        enStrings.footerLinks.map((section) => (
          <div class="col-span-1">
            <h3 class="font-bold text-slate-800 dark:text-slate-200">
              {section.section}
            </h3>
            <ul class="mt-3 grid space-y-3">
              {section.links.map((link, index) => (
                <li>
                  <a
                    href={link.url}
                    class="inline-flex gap-x-2 rounded-lg text-slate-600 dark:text-slate-400 hover:text-orange-700 outline-none ring-slate-500 transition duration-300 focus-visible:ring dark:ring-slate-200 dark:hover:text-slate-300 dark:focus:outline-none"
                  >
                    {link.name}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }

      <div class="col-span-2">
        <h3 class="mb-2 font-bold text-slate-800 dark:text-slate-200">
          {sectionThreeTitle}
        </h3>
        <SecondaryCTA 
        title="Subscribe to Our Email List"
        url="#"
        iconName="messageSend"
        />
      </div>
    </div>

    <div
      class="mt-9 grid gap-y-2 sm:mt-12 sm:flex sm:items-center sm:justify-between sm:gap-y-0"
    >
      <div class="flex gap-2.5 items-center justify-between">
        <p class="text-sm text-slate-600 dark:text-slate-400">
          Â© <span id="current-year"></span> <span class="font-bold">{SITE.title}</span> - Based, built, and coded in Austin, Texas USA.
        </p>
        <Icon name="usFlag" />
        <Icon name="txFlag" />
      </div>

      <!-- Social Brands -->
      <div>
        <FooterSocialLink url={enStrings.socialLinks.x}
          ><Icon name="xFooter" /></FooterSocialLink
        >
        <FooterSocialLink url={enStrings.socialLinks.github}
          ><Icon name="githubFooter" />
        </FooterSocialLink>
      </div>
    </div>

    <script>
      const year = new Date().getFullYear();
      const element = document.getElementById("current-year");
      element!.innerText = year.toString();
    </script>
  </div>
</footer>
