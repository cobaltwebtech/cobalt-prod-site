---
// Import the necessary dependencies
import EndPageCTABtn from "@comp/ui/buttons/EndPageCTABtn.astro";
import { Icon } from "astro-icon/components";

// Define props from Astro
const { title, subTitle, url } = Astro.props;

const btnTitle = "Contact Us";

// Define TypeScript interface for props
interface Props {
  title: string;
  subTitle?: string;
  url?: string;
}
---

<section
  class="relative mx-auto max-w-[85rem] px-4 pb-24 pt-10 sm:px-6 lg:px-8"
>
  <!-- Decorating SVG elements -->
  <div
    class="absolute left-0 top-[60%] max-md:scale-50 sm:top-[50%] md:left-0 md:top-[50%]"
  >
    <Icon name="CodeBrackets" class="size-[120px]" />
  </div>
  <div class="absolute -top-[10%] right-[5%] scale-[60%] md:scale-[80%]">
    <Icon name="CloudCompute" class="size-[120px]" />
  </div>
  <div
    class="absolute bottom-0.5 right-0.5 scale-50 sm:right-[15%] md:bottom-[10%] md:right-[20%] md:scale-[80%]"
  >
    <Icon name="ComputerGlobe" class="size-[120px]" />
  </div>
  <!-- Hero Section Heading -->
  <div class="mx-auto mt-5 max-w-xl text-center">
    <h2
      class="block text-balance text-4xl font-bold leading-tight tracking-tight text-slate-800 dark:text-slate-200 md:text-5xl lg:text-6xl"
    >
      {title}
    </h2>
  </div>
  <!-- Hero Section Sub-heading -->
  <div class="mx-auto mt-5 max-w-3xl text-center">
    {
      subTitle && (
        <p class="text-pretty text-lg text-slate-800 dark:text-cyan-300">
          {subTitle}
        </p>
      )
    }
  </div>
  <!-- End Page CTA Button -->
  {
    url && (
      <div class="mt-8 flex justify-center gap-3">
        <EndPageCTABtn btnURL={url} title={btnTitle} />
      </div>
    )
  }
</section>
