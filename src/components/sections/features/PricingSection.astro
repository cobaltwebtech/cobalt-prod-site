---
import { Icon } from "astro-icon/components";
import { Button } from "@/components/starwind/button";

// Define props from Astro
const { pricing } = Astro.props;
---

<section class="mx-auto max-w-screen-lg py-8">
  <!-- Section heading and sub-heading -->
  <div class="mb-10 text-center lg:mb-14">
    <h2
      class="text-2xl font-bold tracking-tight text-balance text-slate-800 md:text-4xl md:leading-tight dark:text-slate-200"
    >
      {pricing.title}
    </h2>
    <p class="mt-1 text-pretty text-slate-600 dark:text-slate-200">
      {pricing.subTitle}
    </p>
  </div>
  <!-- Contains two main product blocks -->
  <div class="flex flex-wrap items-center justify-center gap-4 md:gap-0">
    <!-- Starter Plan product details -->
    <div
      class="rounded-xl bg-slate-800 p-6 sm:rounded-r-none sm:p-8 md:basis-2/5"
    >
      <div class="mb-4">
        <h3 class="text-2xl font-bold text-slate-100 sm:text-3xl">
          {pricing.staterPlan.name}
        </h3>
        <p class="text-cyan-200">{pricing.staterPlan.description}</p>
        <p class="mt-2 text-slate-200 italic">
          {pricing.staterPlan.subDescription}
        </p>
      </div>

      <div class="mb-4">
        <span class="text-4xl font-bold text-slate-200"
          >{pricing.staterPlan.price}</span
        >
        <span class="text-lg font-bold text-slate-200"
          >{pricing.staterPlan.cents}</span
        >
        <span class="ms-3 text-sm text-slate-200"
          >{pricing.staterPlan.billingFrequency}</span
        >
      </div>
      <!-- Features list - automatically created by mapping over `features` array -->
      <ul class="mb-6 space-y-2 text-slate-200">
        {
          pricing.staterPlan.features.map((feature: string) => (
            <li class="flex items-center gap-1.5">
              <Icon name="CheckFill" class="size-6" />

              <span>{feature}</span>
            </li>
          ))
        }
      </ul>
      <!-- Button for purchasing the product -->
      <Button
        variant="outline"
        href={pricing.staterPlan.purchaseLink}
        class="text-default-foreground w-full"
        >{pricing.staterPlan.purchaseBtnTitle}</Button
      >
    </div>
    <!-- Pro Plan product details -->
    <div
      class="rounded-xl bg-gradient-to-tr from-orange-700 to-orange-500 p-6 shadow-xl sm:p-8 md:basis-3/5"
    >
      <div
        class="mb-4 flex flex-col items-start justify-between gap-4 lg:flex-row"
      >
        <div>
          <h3 class="text-2xl font-bold text-slate-100 sm:text-3xl">
            {pricing.proPlan.name}
          </h3>
          <p class="text-cyan-200">{pricing.proPlan.description}</p>
          <p class="mt-2 text-slate-200 italic">
            {pricing.staterPlan.subDescription}
          </p>
        </div>

        <span
          class="order-first inline-block rounded-full bg-slate-100 px-3 py-1 text-center text-xs font-bold tracking-wider text-orange-600 uppercase lg:order-none"
          >{pricing.badge}</span
        >
      </div>

      <div class="mb-4">
        <span class="text-6xl font-bold text-slate-200"
          >{pricing.proPlan.price}</span
        >
        <span class="text-lg font-bold text-slate-100"
          >{pricing.proPlan.cents}</span
        >
        <span class="ms-3 text-slate-200"
          >{pricing.proPlan.billingFrequency}</span
        >
      </div>
      <!-- Features list - automatically created by mapping over `features` array -->
      <ul class="mb-6 space-y-2 text-slate-200">
        {
          pricing.proPlan.features.map((feature: string) => (
            <li class="flex items-center gap-1.5">
              <Icon name="CheckFill" class="size-6" />

              <span>{feature}</span>
            </li>
          ))
        }
      </ul>
      <!-- Button for purchasing the product -->
      <Button
        variant="warning"
        href={pricing.proPlan.purchaseLink}
        class="w-full">{pricing.proPlan.purchaseBtnTitle}</Button
      >
    </div>
  </div>
  <!-- Call to action under products -->
  <p class="mt-16 text-center text-lg text-slate-600 dark:text-slate-200">
    {pricing.textUnder}
  </p>
  <div class="mt-8 flex items-center justify-center gap-x-3 md:mt-12">
    <p class="text-sm text-slate-600 dark:text-slate-200">
      {pricing.thirdOption}
    </p>

    <Button variant="secondary" href={pricing.btnUrl}
      ><Icon name="ChatFill" />{pricing.btnText}</Button
    >
  </div>
</section>
