---
import { Icon } from "astro-icon/components";
import { Button } from "@/components/starwind/button";

const { phoneUrl, phoneNumber } = Astro.props;

interface Props {
  phoneUrl: string;
  phoneNumber: string;
}
---

<div class="flex flex-col items-center justify-evenly gap-8">
  <div id="fadeInMoveDown" class="-translate-y-[300px] opacity-0">
    <Icon name="MessageReceived" class="mx-auto size-32" />
  </div>
  <div
    class="fadeText -translate-y-[50px] space-y-8 text-justify text-lg opacity-0 md:text-xl"
  >
    <h2
      class="text-center text-4xl font-bold text-slate-700 dark:text-slate-300"
    >
      Submission Received
    </h2>
    <p
      class="fadeText text-justify font-light text-slate-700 sm:text-xl dark:text-slate-300"
    >
      We have received your request. Our team will review your information. We
      will be in touch with you soon, usually, within one business day or
      earlier.
    </p>
    <p
      class="fadeText text-justify font-light text-slate-700 sm:text-xl dark:text-slate-300"
    >
      If you require immediate assistance, please call us at <a
        href={phoneUrl}
        class="text-nowrap text-orange-400 transition-colors duration-300 hover:text-cyan-600"
        target="_blank">{phoneNumber}</a
      > during our normal business hours.
    </p>
    <div class="flex justify-center">
      <Button variant="secondary" size="lg" href="/"
        ><Icon name="House" />Go to Home</Button
      >
    </div>
  </div>
</div>
