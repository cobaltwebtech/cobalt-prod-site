---
import type { HTMLAttributes } from "astro/types";
import { tv, type VariantProps } from "tailwind-variants";

type Props = HTMLAttributes<"textarea"> & VariantProps<typeof textarea>;

const textarea = tv({
  base: [
    "border-input bg-background text-foreground ring-offset-background min-h-16 w-full rounded-md border",
    "focus:outline-focus focus:ring-0 focus:outline-2 focus:outline-offset-2",
    "file:text-foreground file:border-0 file:bg-transparent file:text-sm file:font-medium",
    "disabled:cursor-not-allowed disabled:opacity-50",
    "peer placeholder:text-foreground",
  ],
  variants: {
    size: {
      sm: "min-h-8 px-2 py-1 text-sm",
      md: "min-h-32 px-3 py-2 text-base",
      lg: "min-h-64 px-4 py-3 text-lg",
    },
  },
  defaultVariants: { size: "md" },
});

const { size, class: className, ...rest } = Astro.props;
---

<textarea class={textarea({ size, class: className })} {...rest}></textarea>
